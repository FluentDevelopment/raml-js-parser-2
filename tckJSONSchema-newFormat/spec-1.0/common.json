{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "SourceInfo": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "description": "Path to file which contains definition"
        },
        "namespace": {
          "type": "array",
          "description": "Namespace of defining library if any"
        },
        "__METADATA__": {
          "type": "object"
        }
      }
    },
    "HasSource": {
      "allOf": [
        {
          "$ref": "#/definitions/SourceInfo"
        },
        {
          "type": "object",
          "properties": {
            "scalarsSources": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/SourceInfo"
                }
              }
            }
          }
        }
      ]
    },
    "Annotable": {
      "allOf": [
        {
          "$ref": "#/definitions/HasSource"
        },
        {
          "type": "object",
          "properties": {
            "annotations": {
              "type": "array",
              "description": "Most of RAML model elements may have attached annotations decribing additional meta data about this element",
              "items": {
                "$ref": "#/definitions/AnnotationInstance"
              }
            },
            "scalarsAnnotations": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/AnnotationInstance"
                }
              }
            }
          }
        }
      ]
    },
    "AnnotationInstance": {
      "type": "object",
      "allOf": [
        {"$ref": "#/definitions/ParametrizedProperties"},
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "value": {
              "type": [ "object", "string", "boolean", "number", "array", "null" ]
            }
          }
        }
      ]
    },
    "FragmentDeclaration": {
      "allOf":[
        {"$ref": "#/definitions/Annotable"},
        {
          "properties": {
            "uses": {
              "type": "array",
              "items": {"$ref": "#/definitions/UsesDeclaration"}
            }
          }
        }
      ]
    },
    "UsesDeclaration": {
      "allOf":[
        {"$ref": "#/definitions/Annotable"},
        {
          "type": "object",
          "properties": {
            "key": {
              "type": "string"
            },
            "value": {
              "type": "string"
            },
            "usage": {
              "type": "string"
            }
          }
        }
      ]
    },
    "ParametrizedProperties": {
      "description": "Template property.",
      "type": "object",
      "patternProperties":{
        "^([a-zA-Z0-9]*<<[a-zA-Z0-9]+>>[a-zA-Z0-9]*)+": {
          "type": ["string","number","boolean","object","array","null"]
        }
      }
    }
  }
}